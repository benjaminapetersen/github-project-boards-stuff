# ============================================================================
# kube-board environment configuration
# ============================================================================
# Copy to .env/kube-board.env and fill in your values:
#   cp .env/kube-board.env.example .env/kube-board.env
# Then load before running:
#   source .env/kube-board.env
# ============================================================================

# ---- Authentication ----
# Required: Classic PAT with read:org, read:project, repo, project scopes
export GITHUB_TOKEN=ghp_your_token_here

# ---- Additional Organizations (comma-separated, optional) ----
# The kubernetes org is always included as the primary target.
export GITHUB_ADDITIONAL_ORGS=kubernetes-sigs,Azure

# ---- Team Members ----
# Comma-separated GitHub usernames for the SIG Auth team.
# Combine core team + others of interest into one list.
#
# CORE_TEAM: enj,aramase,ritazh,stlaz
# OTHERS_OF_INTEREST: liggitt,tallclair,ahmedtd,FillZpp,HarshalNeelworker,...
#
export GITHUB_USERNAMES=enj,aramase,ritazh,stlaz,liggitt,tallclair,ahmedtd,FillZpp

# ---- Enhancements Phase ----
# Repo containing KEPs
export ENHANCEMENTS_REPO=kubernetes/enhancements

# Labels to search for enhancement issues (comma-separated)
export ENHANCEMENTS_LABELS=sig/auth

# Kubernetes milestone to filter by
export GITHUB_MILESTONE=v1.36

# Org owning the enhancements tracking board
export ENHANCEMENTS_BOARD_ORG=kubernetes

# The official enhancements tracking board number (Projects V2)
export ENHANCEMENTS_BOARD_NUMBER=241

# ---- Issues Phase ----
# Repo to search for issues/PRs
export ISSUES_REPO=kubernetes/kubernetes

# SIG labels to narrow per-user searches (comma-separated)
# Critical for prolific contributors like liggitt to avoid huge result sets
export ISSUES_SIG_LABELS=sig/auth

# Search qualifier: "involves" (broadest), "author", or "assignee"
export ISSUES_SEARCH_QUALIFIER=involves

# ---- Exclusion Filters ----
# States to exclude from search (applied server-side via state:)
export GITHUB_EXCLUDE_STATES=closed

# Labels to exclude (applied server-side as -label:)
export GITHUB_EXCLUDE_LABELS=lifecycle/stale,lifecycle/rotten

# Board statuses to exclude (applied client-side after enrichment)
# These match the "Status" field values from the enhancements board #241
export GITHUB_EXCLUDE_STATUSES=Deferred,Removed from Milestone

# ---- Destination Board ----
# Only needed when using --output=board
# User/org owning the private destination board
export GITHUB_DEST_BOARD_OWNER=your-github-username

# Name for the private destination board
export GITHUB_DEST_BOARD_NAME=SIG Auth 1.36 Team Board

# View names to auto-create on the destination board (comma-separated).
# Each view will have all sync fields shown as visible columns.
# Existing views are preserved (filters are not overwritten).
export GITHUB_DEST_BOARD_VIEWS=KEPs,Current Issues,All Issues

# Repos to link to the destination board (comma-separated, auto-prefixed with owner)
export GITHUB_LINK_REPOS=enhancements,kubernetes
